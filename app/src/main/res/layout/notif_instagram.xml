<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginLeft="16dp"
    android:orientation="vertical"
    android:paddingStart="2dp"
    android:paddingTop="12dp"
    android:paddingEnd="12dp"
    android:paddingBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="false"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_insta"
            android:tint="#0095ff">

        </ImageView>

        <TextView
            android:id="@+id/text_appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image"
            android:paddingLeft="6dp"
            android:text="Instagram"
            android:textAppearance="@style/TextAppearance.Compat.Notification.Media"
            android:textColor="#0095ff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/text_appname"
            android:paddingLeft="5dp"
            android:text="14:46"
            android:textAppearance="@style/TextAppearance.Compat.Notification.Time"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_appname"
        android:layout_marginTop="10dp"
        android:text="ugomoiss"
        android:textAppearance="@style/TextAppearance.Compat.Notification.Title" />

    <TextView
        android:id="@+id/text_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_title"
        android:layout_marginTop="1dp"
        android:text="(hugolsalazar): Pictet liked a message"
        android:textAppearance="@style/TextAppearance.Compat.Notification.Line2"
        android:textSize="13sp" />
</LinearLayout>